<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="66dp">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="New Elective"
            android:textColor="#100F0F"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Choose subject"
            android:textColor="#100909"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/newElectiveDialogRadioGroupLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/newElectiveDialogPhysicalTrainingRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Physical Training"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogComputerScienceRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Computer science"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogNativeLanguageRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Native Language"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogLiteratureRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Literature"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogForeignLanguageRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Foreign Language"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogGeographyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Geography"
                    android:textSize="10sp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/newElectiveDialogRadioGroupRight"
                android:layout_width="250dp"
                android:layout_height="180dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/newElectiveDialogBiologyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Biology"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogMathematicsRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Mathematics"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogPhysicsRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Physics"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogChemistryRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Chemistry"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogSocialStudiesRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Social studies"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/newElectiveDialogHistoryRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="History"
                    android:textSize="10sp" />

            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/newElectiveDialogWrongSibject"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Teacher ID"
            android:textColor="#100909"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/newElectiveDialogTeacherID"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/newElectiveDialogAddButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add" />

            <Button
                android:id="@+id/newElectiveDialogCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>